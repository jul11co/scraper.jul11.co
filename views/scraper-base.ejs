        link_url = link_url.replace('http:///', '/');
        link_url = link_url.replace('http://', '/');
        link_url = link_url.replace('http:/', '/');
        link_url = link_url.replace('https:///', '/');
        link_url = link_url.replace('https://', '/');
        link_url = link_url.replace('https:/', '/');
