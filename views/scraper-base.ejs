        || link_href.indexOf('javascript:') == 0) {
        return;
      }
      if (excludes.length > 0) {
        var excluded = false;
        for (var i = 0; i < excludes.length; i++) {
          if (link_href.indexOf(excludes[i]) >= 0) {
            excluded = true;
            break;
          }
